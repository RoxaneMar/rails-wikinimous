<h1><%= Kramdown::Document.new(@article.title).to_html.html_safe %></h1>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?"} %>

<p><%= Kramdown::Document.new(@article.content).to_html.html_safe %></p>

<p>Created: <%= time_ago_in_words(@article.created_at) %> ago</p>
<%= link_to 'Back to the list of article', articles_path  %>
